{
  "manifest_version": 3,
  "name": "Red Border Highlighter",
  "version": "1.0",
  "description": "Adds red borders to all pages for visual testing",
  "permissions": ["activeTab", "management"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Red Border Active"
  },
  "background": {
    "service_worker": "background.js"
  }
}
